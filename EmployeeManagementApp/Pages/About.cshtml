@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>

<div ng-controller="EmployeeController"></div>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">City</th>
            <th scope="col">Contact</th>
            <th scope="col">Gender</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="item in EmployeeManagement">
            <th scope="row">1</th>
            <td>{{item.Firstname}}</td>
            <td>Otto</td>
            <td>Otto</td>
            <td>Otto</td>
            <td>Otto</td>
            <td><button class="btn btn-primary" ng-click="(item)">Edit</button></td>
            <td><button class="btn btn-primary" ng-click="(item)">Delete</button></td>
        </tr>        
    </tbody>
</table>

  <div>
      <form>
          <div>
              <label>Firstname</label>
              <input type="text" ng-model="Firstname" />
          </div>
          <div>
              <label>Firstname</label>
              <input type="text" ng-model="Lastname" />
          </div>
          <div>
              <label>Firstname</label>
              <input type="text" ng-model="City" />
          </div>
          <div>
              <label>Firstname</label>
              <input type="text" ng-model="Contact" />
          </div>
          <div>
              <label>Firstname</label>
              <input type="text" ng-model="Gender" />
          </div>

          <button class="btn btn-primary" ng-click="AddRecord()">Add</button>
      </form>
  </div>

